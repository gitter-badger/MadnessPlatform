doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width, minimal-ui")
        meta(name="mobile-web-app-capable" content="yes")
        meta(name="theme-color" content=css.vars.theme.primary)
        meta(name="apple-mobile-web-app-capable" content="yes")
        meta(name="apple-mobile-web-app-status-bar-style" content=css.vars.theme.primary)
        title=name
        link(rel="shortcut icon" href="favicon.ico")
        link(rel="icon" sizes="192x192" href="favicon.png")
        link(href="#{css.dir}#{css.file}" rel="stylesheet")
        script(src="cordova.js")
    body(ng-app=name ng-controller="appCtrl")
        ion-nav-bar(class="bar-positive")
            ion-nav-back-button   
        ion-nav-view
        script(src="js/build.js")