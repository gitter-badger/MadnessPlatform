{
    "name": "MadnessPlatform",
    "description": "The application stack used to develop at Madness Labs",
    "root": "www/",
    "mobile": false,
    "local": true,
    "url": "http://madnesslabs.net",
    "version": "0.0.0-alpha",
    "db": {
        "firebase": {
            "host": "YOUR FIREBASE HERE"
        }
    },
    "html": {
        "dir": "html/",
        "file": "index.html",
        "srcDir": "src/jade/",
        "srcFile": "app.jade",
        "watch": [
            "src/jade/**/*.jade",
            "!src/jade/app.jade"
        ]
    },
    "css": {
        "dir": "css/",
        "file": "build.css",
        "srcDir": "src/scss/",
        "vars": {
            "theme": {
                "primary": "#387ef5",
                "secondary": "#11c1f3"
            },
            "light": "#ffffff !default",
            "stable": "#f8f8f8 !default",
            "positive": "$theme-primary !default",
            "calm": "$theme-secondary !default",
            "balanced": "#33cd5f !default",
            "energized": "#ffc900 !default",
            "assertive": "#ef473a !default",
            "royal": "#886aea !default",
            "dark": "#444444 !default",
            "ionicons-font-path": "'../fonts' !default",
            "screen": {
                "xl": "1500px",
                "lg": "1200px",
                "md": "992px",
                "sm": "768px"
            }
        },
        "libraries":[
            "bower_components/ionic/scss/ionic.scss",
            "bower_components/font-awesome/scss/font-awesome.scss",
            "bower_components/geoffgraham.animate.scss/animate.scss",
            "src/scss/library/**/*.scss"
        ],
        "build":[
            "build/css/variables.css",
            "build/css/mixin/**/*.css",
            "build/css/element/**/*.css",
            "build/css/page/**/*.css"
        ],
        "watch": [
            "src/scss/**/*.scss"
        ]
    },
    "js": {
        "dir": "js/",
        "file": "build.js",
        "srcDir": "src/ts/",
        "libraries":[
            "bower_components/ionic/js/ionic.bundle.js",      
            "bower_components/ngCordova/dist/ng-cordova.js",
            "bower_components/firebase/firebase.js",
            "bower_components/angularfire/dist/angularfire.js"
        ],
        "build": [ 
            "build/js/app.js",
            "build/js/config.js",
            "build/js/ctrl/**/*.js",
            "build/js/fctry/**/*.js",
            "build/js/drctv/**/*.js",
            "build/js/srv/**/*.js"
        ],
        "watch": [
            "src/ts/**/*.ts"
        ]
    },
    "font": {
        "dir": "fonts/",
        "watch": [
            "bower_components/ionic/fonts/**",
            "bower_components/font-awesome/fonts/**"
        ]
    },
    "img": {
        "dir": "img/",
        "favicon": "resources/icon.png",
        "watch":[
            "resources/**"
        ]
    }
}